<h1><strong>Editing Book</strong></h1>

<!-- バリデーションを行った際のエラー表示 -->
 <% if @book.errors.any? %>
  <div class="errors">
   <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
       <!--pluralizeを使ってerrorを単数形から複数形に-->
   <div class="errors-message">
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <%end%>
    </ul>
   </div>
  </div>
 <%end%>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
                          <!-- ここの部分：updateのための記述の追記 　　-->
<div class="field">
 <p>Title</p>
 <%= f.text_field :title %>
</div>

<div class="field">
 <p>Body</p>
 <%= f.text_area :body %>
</div>

<div class="actions">
 <%= f.submit 'Update Book' ,class:"input" %>
</div> 

<%end%>

<div>
 <%= link_to "Show", book_path(@book.id) ,class:"a" %>
 |
 <%= link_to "back", index_book_path(@book.id) ,class:"a" %>
</div>