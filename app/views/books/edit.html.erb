<h1><strong>Editing Book</strong></h1>

<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
                          <!-- ここの部分：updateのための記述の追記 　　-->
<div class="field">
 <p>Title</p>
 <%= f.text_field :title %>
</div>

<div class="field">
 <p>Body</p>
 <%= f.text_area :body %></br>
</div>

<div class="actions">
 <%= f.submit 'Update Book' ,class:"input" %>
</div> 
<%end%>

<p class="show-edit_back">
 <a href="">Show</a> | 
 <a href="/books">Back</a>
</p>