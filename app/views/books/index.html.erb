<h1 class="headline">Books</h1> 
 <table> 
 
  <thead> 
   <tr> <th>title</th> <th>body</th> <th></th> </tr> 
  </thead>
  
 <tbody> 
   <% @books.each do |book| %> 
   <tr> 
 
    <td> <%= book.title %> </td> <td> <%= book.body %> </td> 
  
    <td><%= link_to "show"%></td> 
    <td><%= link_to "edit"%></td> 
    <td><%= link_to "destroy", method: :delete, "data-confirm" => "Are you sure?" %></td> 
 
   </tr> 
   <% end %> 
 </tbody> 
  
 </table> 
 
 <h2 class="sub-headline">New book</h2> 
 <!-- form_with部分 --> 
 <%= form_with model: Book.new do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>
  
  <br><%= f.submit 'Create Book' %></br>
  <!--brで改行する。Bodyの下にボタンが来るようにする-->
 <% end %>
 
  <!-- この次は投稿を保存するためのcreate機能 -->
